                "/packages/domains/configs/*": "${workspaceFolder}/packages/domains/configs/*",
                "/packages/domains/game-event/*": "${workspaceFolder}/packages/domains/game-event/*",
                "/packages/domains/text2speech/*": "${workspaceFolder}/packages/domains/text2speech/*",
                "/packages/presentation/configs-klasa/*": "${workspaceFolder}/packages/presentation/configs-klasa/*",
                "/packages/presentation/core/*": "${workspaceFolder}/packages/presentation/core/*",
                "/packages/presentation/klasa-core-command-rewrite/*": "${workspaceFolder}/packages/presentation/klasa-core-command-rewrite/*",
                "/packages/presentation/klasa-member-gateway/*": "${workspaceFolder}/packages/presentation/klasa-member-gateway/*",
                "/packages/presentation/main/*": "${workspaceFolder}/packages/presentation/main/*",
                "/packages/presentation/protos/*": "${workspaceFolder}/packages/presentation/protos/*",
                "/packages/presentation/rpc-client/*": "${workspaceFolder}/packages/presentation/rpc-client/*",
                "/packages/presentation/rpc-server/*": "${workspaceFolder}/packages/presentation/rpc-server/*",
                "/packages/presentation/shared-config/*": "${workspaceFolder}/packages/presentation/shared-config/*",
                "/packages/presentation/sub/*": "${workspaceFolder}/packages/presentation/sub/*",
                "/packages/repository/gss/*": "${workspaceFolder}/packages/repository/gss/*",
