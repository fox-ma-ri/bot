                "/packages/util/kuromoji-js/*": "${workspaceFolder}/packages/util/kuromoji-js/*",
                "/packages/util/open-jtalk/*": "${workspaceFolder}/packages/util/open-jtalk/*",
                "/packages/util/periodical-dsl/*": "${workspaceFolder}/packages/util/periodical-dsl/*",
                "/packages/util/sound-mixing-proto/*": "${workspaceFolder}/packages/util/sound-mixing-proto/*",
                "/packages/util/timing-to-notify-dsl/*": "${workspaceFolder}/packages/util/timing-to-notify-dsl/*"
