FROM node:14

#作業ディレクトリを移動
WORKDIR /usr/app
  
COPY package.json .
COPY lerna.json .
COPY tsconfig.json .
COPY yarn.lock .
COPY packages/ ./packages/



#lernaをインストール
RUN yarn global add pm2 lerna
RUN lerna bootstrap
RUN lerna run build

COPY kick.js .
CMD [ "pm2","--no-daemon","start","kick.js","--name","pwrd-event"]